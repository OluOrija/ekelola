---
import BaseLayout from "../../../../layouts/BaseLayout.astro";
import { getPostsByTag } from "../../../../lib/content";
const { tag, page } = Astro.params;
const PAGE_SIZE = 10;
const { posts, totalPages } = await getPostsByTag(tag, Number(page), PAGE_SIZE);
---
<BaseLayout title={`Posts tagged "${tag}"`}>
  <h1>Tag: {tag}</h1>
  <ul>
    {posts.map((post) => (
      <li>{post.data.title}</li>
    ))}
  </ul>
  <!-- Pagination controls here -->
</BaseLayout>
