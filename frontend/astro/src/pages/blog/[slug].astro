---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts"); // <- correct collection name
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<BaseLayout title={post.data.title}>
  <article>
    <header>
      <h1>{post.data.title}</h1>
  {post.data.date && <time datetime={typeof post.data.date === 'string' ? post.data.date : post.data.date.toISOString?.() ?? post.data.date}>{typeof post.data.date === 'string' ? post.data.date : post.data.date.toLocaleDateString()}</time>}
    </header>

    <Content />   {/* <- this renders the markdown */}
  </article>
</BaseLayout>
