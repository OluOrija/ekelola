---
import type { CollectionEntry } from "astro:content";
const { post } = Astro.props as { post: CollectionEntry<"posts"> };
const { data, slug } = post;
---
<article class="space-y-2">
  <h2 class="text-xl font-semibold">
    <a href={`/blog/${slug}`} class="hover:underline">{data.title}</a>
  </h2>
  <p class="text-sm text-zinc-600">{new Date(data.date).toLocaleDateString()}</p>
  <p>{data.description}</p>
    {data.coverImage && (
    <img
      src={data.coverImage.src.replace(/^\.\.\/\.\.\/images\//, '/images/')}
      width={data.coverImage.width}
      height={data.coverImage.height}
      alt={data.coverImage.alt || data.title}
      style="max-width:100%;height:auto;border-radius:0.5rem;"
    />
  )}
</article>
